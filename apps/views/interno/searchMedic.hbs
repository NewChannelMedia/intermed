<!--
  EN ESTA VISTA SE DEBE DE CONDICIONAR LOS SELECT DONDE SI SELECCIONA
  ESPECIALIDAD AL MENOS DEBE DE SELECCIONAR UNA EN EL CAMPO DONDE APARECEN LAS
  ESPECIALIDADES, LOS CAMPOS DE ESTADO Y CIUDAD PUEDEN IR VACIOS,
  TAMBIEN SE DEBE DE HACER ESO EN LOS CAMPOS DONDE SE PIDA LOS NOMBRES,
  Y EN EL INPUT DONDE SE PIDE PADECIMIENTO, ALMENOS DEBE DE TENER UNA SELECCION
  EN EL INPUT SELECT DE PADECIMIENTOS. LOS CAMPOS DE ESTADO Y CIUDAD PUEDEN
  IR VACIOS.
-->
<section id="searchMedic" class="Flama">
  <div class="container">
    <div class="row">
      <div class="upper">
        <ol class="breadcrumb">
          <li><a href="/">Intermed</a></li>
          <li class="active">Resultados</li>
        </ol>
      </div>
      <!-- empieza buscador -->
      <div class="panel searchbox">
        <div class="panel-body">
          <form method="POST" action="/searchMedic">
            <input type="hidden"value="local"name = "local"/>
            <!-- Form principal -->
            <h4>Filtra tu busqueda o inicia una nueva</h4>
            <div class="parametros col-md-10">
              <div class="row">
                <div class="col-md-3">
                  <div class="form-group">
                    <select class="form-control" name="especialidad">
                      <option value = "0" >Especialidades</option>
                      {{#each especia}}
                        <option value = {{id}}>{{especialidad}}</option>
                      {{/each}}
                    </select>
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <select class="form-control" id = "slc_estados"name="estado">
                      <option value = "0" >Estado</option>
                      {{#each estado}}
                        <option value = {{id}}>{{estado}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <select class="form-control" id = "slc_ciudades"name="ciudad">
                      <option value = "0" >Ciudad</option>
                      {{#each ciudad}}
                        <option value = {{id}}>{{ciudad}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <select class="form-control" name="padecimiento">
                      <option value = "0" >Padecimiento</option>
                      {{#each padecimiento}}
                        <option value = {{id}}>{{padecimiento}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <input type="text" class="form-control" id="nombreMed" name="nombreMedico" placeholder="Nombre del Medico">
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <input type="text" class="form-control" id="hospital" name="hospital" placeholder="Hospital">
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <input type="text" class="form-control" id="aseguradora" name="aseguradora" placeholder="Aseguradora">
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <input type="text" class="form-control" id="costoMed" name="costoMedico" placeholder="Costo de consulta">
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">
                <!-- <button class="btn btn-success btn-md btn-block"id = "btn">
                           <span class="glyphicon glyphicon-search"></span>&nbsp Buscar
                        </button> -->
                <input type="submit" value="Buscar" class="btn btn-info btn-md btn-block" id="btn" />
              </div>
            </div>
          </form>
          <!-- final del form principal -->
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist" id="resultTabs">
          <li role="presentation" class="tab active"><a href="#medResults" aria-controls="medResults" role="tab" data-toggle="tab">Medicos</a></li>
          <li role="presentation" class="tab"><a href="#centrosResult" aria-controls="centrosResult" role="tab" data-toggle="tab">Centros Medicos</a></li>
          <li role="presentation" class="tab"><a href="#padResults" aria-controls="padResults" role="tab" data-toggle="tab">Padecimientos</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content" id="tabsContent">
          <div class="panel">
            <div class="panel-body">
              <div role="tabpanel" class="tab-pane fade in active " id="medResults">
                <ul class="media-list">
                {{#each usuarios}}
                  <li class="media result">
                    <div class="media-left">
                      <div class="media-enclosure">
                        <a href="#">
                          <img class="media-object" src={{urlFotoPerfil}} alt="">
                        </a>
                      </div>
                    </div>
                    <div class="media-body">
                      <div class="col-md-8">
                        <h4 class="media-heading">
                          <span class="label label-topDr">Top Doctor</span> Dr.{{DatosGenerale.nombre}} {{DatosGenerale.apellidoP}} {{DatosGenerale.apellidoM}}.
                        </h4>
                        <ul class="list-unstyled list-inline">
                            {{#each Medico.MedicoEspecialidads}}
                                {{#unless subEsp}}
                                <li>
                                  <strong>{{Especialidad.especialidad}}</strong>
                                </li>
                                {{/unless}}
                            {{/each}}
                        </ul>
                        <ul class="list-unstyled list-inline">
                            {{#each Medico.MedicoEspecialidads}}
                                {{#if subEsp}}
                                <li>
                                  {{Especialidad.especialidad}}
                                </li>
                                {{/if}}
                            {{/each}}
                        </ul>
                        <ul class="list-inline">
                          {{#each Medico.Padecimientos}}
                            <li>
                              <small>{{padecimiento}}</small>
                            </li>
                          {{/each}}
                        </ul>
                        <ul class="list-unstyled list-ubicaciones">
                          {{#each Direccions }}
                            <li>
                              <button class="btn btn-warning">
                                <span class="glyphicon glyphicon-map-marker"></span>
                              </button>
                              <a href={{ubicacionGM}}>
                                  <strong>{{nombre}}</strong>
                                  <small>Calle :{{calle}} #{{numero}} Estado :{{Estado.estado}}, Ciudad :{{Ciudad.ciudad}}</small>
                              </a>
                            </li>
                          {{/each}}
                          <!-- Cada <li> en esta parte debe mostrar una ubicación en la que trabaja el Medico -->
                        </ul>
                      </div>
                      <div class="resultOptions col-md-4">
                        <ul class="list-unstyled">
                          <li>
                            Costo de consulta:
                            <strong> $1,230</strong>
                          </li>
                          <li>
                            <a>Agrega a tus favoritos</a>
                          </li>
                          <li>
                            <a>Ver Teléfono</a>
                          </li>
                          <li>
                            <a>Envía mensaje</a>
                          </li>
                          <li>
                            <a>Visita su perfíl</a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </li>
                {{/each}}
                </ul>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="centrosResult">
                <div class="media-list">
                  <div class="media">
                    <div class="media-left">
                      <a href="#">
                        <img class="media-object" src="" alt="">
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="padResults">
                <div class="media-list">
                  <div class="media">
                    <div class="media-left">
                      <a href="#">
                        <img class="media-object" src="" alt="">
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

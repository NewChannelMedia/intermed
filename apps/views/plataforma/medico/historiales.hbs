<div class="container-fluid"><!-- container-fluid -->
  <div class="row"><!-- ROW principal -->
    <!-- Inicio barra lateral izquierda -->
    <div class="col-md-3">
      <div class="col-md-12">
        <div class="list-group">
          <a href="#" class=" list-group-item">

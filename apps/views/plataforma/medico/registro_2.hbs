                  <div id="mapDiv"></div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <label class="control-label regInput" for="textinput">Ingresa tus números de contacto:</label>
                </div>
                <div class="col-lg-3 col-md-3">
                  <select class="form-control regInput" id="tipoTelefono">
                    <option value="celular">Celular</option>
                    <option value="oficina">Oficina</option>
                    <option value="localizador">Localizador</option>
                  </select>
                </div>
                <div class="col-lg-4 col-md-4" id="divTelefono">
                  <input type="text" id="numTelefono" class="form-control solo-numero" placeholder="Número:" onpaste="soloNumeros()" maxlength="12">

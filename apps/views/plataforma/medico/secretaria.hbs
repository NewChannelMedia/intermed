<section id="medicoSecretaria">
<div class="container-fluid agendaTopContainer">
  <div class="agendaTop noPadding">
    <div class="body-container">
      <div class="center-content">
        <div class="row noPadding">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <h4 class="h45-light s30 text-uppercase white-c shadow noMargin">Tus Secretarias</h4>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            {{#if secretaria}}
              <button class="btn btn-primary pull-right" onclick="$('#agregar').removeClass('hidden');$('#mostrar').addClass('hidden');">Agregar</button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="msBody" class="container-fluid">
  <div id="agregar" class="container h45-light s17 {{#if secretaria}}hidden{{/if}}">
    <div class="row" style="margin-top:30px">
      {{#if secretaria}}
        <div class="col-md-8">
          <div class="row">
            <h3 class="h45-light s25 text-uppercase">
              <strong>Nueva secretaria</strong>
            </h3>
          </div>
        </div>
        <div class="col-md-4">
          <div class="row">
            <h3>
              <button class="btn btn-danger btn-lg pull-right" onclick="window.location.reload()/*$('#mostrar').removeClass('hidden');$('#agregar').addClass('hidden');*/">Cancelar</button>
            </h3>
          </div>
        </div>
      {{else}}
        <div class="col-md-12">
          <h4 class="h77-boldcond whiteF s30 text-center" style="margin-top: 35px;">BUSCA A TU SECRETARIA</h4>
        </div>
      {{/if}}
      <div class="col-md-12">
        <div class="row">
          <div class="input-group">
            <div class="input-group-addon" style="padding:0px">
              <select style="border: none;background-color:transparent" id="tipoBusqueda">
                <option value="1">Buscar por nombre</option>
                <option value="2">Buscar por correo</option>
              </select>
            </div>
            <input type="text" class="form-control" placeholder="Escribe tu busqueda..." id="inputBusquedaSecretaria" pattern=".{3,}">
            <span class="input-group-btn">
              <button class="btn btn-primary" type="button" onclick="filtrarBusquedaSecretaria()">Buscar</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="pager" style="margin: 0px;text-align: right;margin-right: 6px;font-weight: bold;"></div>
          <ul class="media-list list-group" id="filtroSecretariaResult">
          </ul>
          <div class="pager" style="margin: 0px;text-align: right;margin-right: 6px;font-weight: bold;"></div>
          <ul class="media-list list-group">
            <li class="media list-group-item active" style="margin-top: 0px">
              <div class="media-body text-center">

                <form method="post" onsubmit="return invitarSecretariaEmail()">
                  <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                      <h4 class="media-heading"><b>¿Tu secretaria no está en Intermed?</b></h4>
                    </div>
                  </div>
                  <div class="col-md-6 col-md-offset-3 hidden" id="successEmail">
                    <div class="alert alert-success">
                      <strong>¡Éxito!</strong> La invitación fue enviada a tu secretaria.
                    </div>
                  </div>
                  <div class="col-md-6 col-md-offset-3 hidden" id="errorEmail">
                    <div class="alert alert-danger">
                      <strong>¡Error!</strong> <span class="msg"></span>
                    </div>
                  </div>
                  <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                      <input type="email" class="form-control" id="secretariaEmail" placeholder="Correo electrónico" required="true">
                    </div>
                  </div>
                  <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                      <button class="btn btn-info btn-block">Invitar</button>
                    </div>
                  </div>
                </form>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div id="mostrar" class="container h45-light s17 {{#unless secretaria}}hidden{{/unless}}">
    <div class="row">
      {{#each secretarias}}
      <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-left">
        <div class="panel panel-default noBorder">
          <div class="panel-heading">
            <div class="row noPadding">
              <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
                <img class="img-circle img-responsive" alt="64x64" src="{{Secretarium.Usuario.urlFotoPerfil}}" data-holder-rendered="true">
              </div>
              <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8" style="height: auto;">
                <h3 class="h67-medcond s20 noMargin">{{Secretarium.Usuario.DatosGenerale.nombre}} {{Secretarium.Usuario.DatosGenerale.apellidoP}} {{Secretarium.Usuario.DatosGenerale.apellidoM}}</h3>
                <h4 class="h45-medium s15">{{Secretarium.Municipio.municipio}}, {{Secretarium.Estado.estado}}</h4>
              </div>
            </div>
            <hr class="noMargin"/>
            <div class="row">
              <div class="col-lg-12">
                <p><br>Correo: {{Secretarium.Usuario.correo}}</p>
                {{#if Secretarium.Usuario.Telefonos}}
                  <p>Tel: (331) 439 5304</p>
                  <p>Cel: (331) 439 5304</p>
                {{/if}}
              </div>
            </div>
          </div>
          <div id="collapse{{id}}" class="panel-collapse collapse square">
            <ul class="list-group">
              <li class="list-group-item active square bg-darkBlue">
                <h4 class="list-group-item-heading noMargin">Permisos:</h4>
              </li>
              {{#each permisos}}
                <li class="list-group-item">
                  <span class="" for="checkSecrPerm_{{../id}}_{{id}}">{{permiso}}</span>
                  <input type="checkbox" class="pull-right" {{#if MedicoSecretariaPermisos}} {{#each MedicoSecretariaPermisos}} {{#if permiso}} checked="true" {{/if}} {{/each }} {{else}} {{#if default}} checked="true" {{/if}} {{/if}} id="checkSecrPerm_{{../id}}_{{id}}"
                    onchange="cambiarPermisoSecretaria({{../id}},{{id}},this);">
                </li>
              {{/each}}
              <li class="list-group-item">
              </li>
              <a role="button" class="list-group-item list-group-item-danger square" onclick="eliminarSecretaria({{Secretarium.id}})">
                <span class="h45-light s15 center-block text-center">Dar de Baja</span>
              </a>
            </ul>
          </div>
          <div class="panel-footer">
            <div class="row noPadding">
              <div class="col-lg-12">
                <a class="pull-right" role="button" data-toggle="collapse" href="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                  <span class="glyphicon glyphicon-cog"></span> Configurar
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</section>

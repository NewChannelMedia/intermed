            <div class="input-group-addon square">
              <select style="border: none;background-color:transparent" id="tipoBusqueda">
                <option value="1">Buscar por nombre</option>
                <option value="2">Buscar por correo</option>
              </select>
            </div>
            <input type="text" class="form-control" placeholder="Escribe tu busqueda..." id="inputBusquedaSecretaria" pattern=".{3,}">

<section id="perfilPaciente">
  <div class="container-fluid agendaTopContainer">
    <div class="row noPadding">
      <div class="userProfile">
        <div class="body-container">
          <div class="center-content">
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-9">
              <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
                  {{#if usuario.id}}
                    <img class="img-circle img-responsive center-block" alt="64x64" src="
                    {{usuario.urlFotoPerfil}}" data-holder-rendered="true">
                  {{else}}
                    <img class="userProfilePic center-block" src="
                    {{valSession 'fotoPerfil'}}" id='fotoPerfil' alt="perfil" />
                    <label for="imageFile" class="userProfileChangePic hidden">Cambiar Imagen</label>
                    <input type="file" id="imageFile" style="display:none">
                  {{/if}}
                </div>
                <div class="col-lg-9 col-md-9 col-sm-8 col-xs-8">
                  {{#if usuario.id}}
                    <h2 class="h67-medcond s30 text-capitalize white-c shadow">
                        {{#if usuario.DatosGenerale}}
                          {{usuario.DatosGenerale.nombre}} {{usuario.DatosGenerale.apellidoP}} {{usuario.DatosGenerale.apellidoM}}
                        {{/if}}
                    </h2>
                  {{else}}
                  <h2 class="h67-medcond s30 text-capitalize white-c shadow">
                    {{valSession "name"}}
                    <h4 class="h67-medcond s20 text-uppercase white-c">
                      {{#ifSession "municipio"}}
                        {{valSession "municipio"}}, {{valSession "estado"}}. MX
                      {{/ifSession}}
                    </h4>
                    <ul class="media-right profileExtraNav list-inline">
                      <li class="active"><a role="button" class="white-c" onclick="editaPerfBoot();">Edita tu perfil</a></li>
                    </ul>
                  {{/if}}
                </div>
              </div>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-3">
              <div class="body-container">
                <div class="top-content">
                  <p class="noMargin text-uppercase h77-boldcond s30 white-c text-right shadow">
                    <span class="hidden-sm hidden-xs" id="diaSemana">martes</span> <span id="diaFecha">22</span> <span class="hidden-sm hidden-xs">de </span><span id="mesFecha">marzo</span><span class="hidden-sm hidden-xs">,</span> <span id="anioFecha">2016</span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid agendaBody dashboardBody">
    <div class="row noPadding">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 agendaMonth dashboardLeft">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 agendaElement text-center noPadding">
            <div class="body-container">
              <div class="top-content">
                <div id="calendar" class="h77-boldcond"></div>
              </div>
            </div>
          </div>
        </div>

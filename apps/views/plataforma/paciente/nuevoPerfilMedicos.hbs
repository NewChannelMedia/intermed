  <div id="colegas" class="container-fluid dashboardBody2">
    <div class="row noPadding">
      <div class="col-lg-12">
        <div class="row noPadding colegas-header">
          <div class="col-lg-12">
            <div class="row">
              <div class="col-lg-12 col-md-12 text-center">
                <h4 class="cat-main-title h77-boldcond">Mis médicos favoritos</h4>
                <h4 class="cat-sub-title h67-medcond noMargin hidden-xs">Ligas a los perfiles de mis médicos favoritos</h4>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-center">
                <ul class="list-inline text-center center-block">
                  <li onclick="ocultarBuscadorColegasEspecial();cargarListaEspCol( $( '#usuarioPerfil' ).val() ,'P');">
                    <span class="glyphicon glyphicon-circle-arrow-right"></span> Ordenar por especialidad
                  </li>
                  <li onclick="ocultarBuscadorColegasEspecial();cargarListaAlfCol( $( '#usuarioPerfil' ).val(),'P' );">
                    <span class="glyphicon glyphicon-circle-arrow-right"></span> Ordenar por apellido
                  </li>
                  <li onclick="buscadorColegasEspecial();">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                  </li>
                </ul>
              </div>
            </div>
            <div class="row hidden" id="buscadorEspecial" style="background-color:#3c6b8a;padding:10px;padding-bottom: 0px;">
              <div clas="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group has-feedback" id="buscador">
                  <input type="text" class="form-control ui-autocomplete-input" id="buscadorEspecialInput" placeholder="Buscar colega..." autocomplete="off"  onchange="cargarListaEspCol( $( '#usuarioPerfil' ).val() );">
                  <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"  onclick="cargarListaEspCol( $( '#usuarioPerfil' ).val(),'P' );"></span>
                </div>
              </div>
            </div>
            <div id="FavColPanel">
              <div class="contList">
              </div>
            </div>
            <hr class="sep">
          </div>
        </div>
        <div class="row noPadding">
          <div id="listaEspecialidades" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 side-especialidades colegas-element">
            <p>
              <span class="side-especialides-header h77-boldcond">Selecciona</span><!--<div class="clearfix"></div>-->
              <span class="side-especialides-subheader h67-medcond" id="tipoFiltro"></span>
            </p>
            <hr class="sep">
            <ul class="nav nav-pills nav-stacked h67-medcond" id="especialidadesList">
            </ul>
          </div>
          <div id="listaColegas" class="col-lg-9 col-md-9 col-sm-9 col-xs-12 main-colegas colegas-element" data-spy="scroll" data-target="#listaEspecialidades" data-offset="180">
          </div>
        </div>
      </div>
    </div>

<div class="modal fade" id="ModificarPerfilModal" name="modificarPerfilModal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-lg">
        <form id="perfilPaciente" >
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <label>Datos Generales</label>
                        <div class="col-md-12">
                            <div class = "col-md-4">
                                <img src="{{fotoPerfil}}" width="200" height="200" class="img-rounded">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="prf_nombre" name="nombre" placeholder="Nombre">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="prf_apellidoPat" name="apellidoP" placeholder="Apellido">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="prf_apellidoMat" name="apellidoM" placeholder="Apellido">
                            </div>
                            <hr/>
                            <label>Direcciones</label>
                              <div id = "direccions" class = "col-md-4"></div>
                            <hr/>
                            <label>Telefonos</label>
                              <div class = "col-md-4" id = "telefonos"></div>
                            <hr/>
                            <label>Biometrico</label>
                              <div class = "col-md-4" id = "biometrico"></div>
                            <hr/>
                            <label>Paciente</label>
                              <div class = "col-md-4" id = "paciente">
                                <label>Contacto de Emergencia</label>
                                  <div class = "" id = "contactoEmergencia"></div>
                                <hr/>
                                <label>Paciente padecimiento</label>
                                  <div class = "" id = "pacientePadi"></div>
                                <hr/>
                                <label>Paciente alergia</label>
                                  <div class = "" id = "pacienteAlergi"></div>
                                </hr>
                              </div>
                            <hr/>
                        </div>
                </div>
                <div class="modal-footer">
                    <input type="button" value="Guardar Cambios" onclick = "actualizarBiometricos()" class="btn btn-primary">
                    <input type="button" value="Cancelar" class="btn btn-danger" data-toggle="modal" data-target="#ModificarPerfilModal">
                </div>
                </div>
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->


<div class="modal fade" id="CambiarFotoPerfil" name="CambiarFotoPerfil" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <form method="POST" action="" onsubmit="verificarImagen()">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row" style="display: flex;align-items: center;justify-content: center;flex-direction: column;">
                                <h4 class="modal-title">Selecciona el area a guardar</h4>
                                <hr/>
                                <input type="hidden" value="" name="base64file" id="base64file">
                                <div class="col-md-12" id="contenedorFoto" class="text-center" style="width: auto;margin: auto"></div>
                                <canvas id="canvas" height="300" width="300" style="display: none"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Guardar" class="btn btn-primary" id="btnCrop">
                    <input type="button" value="Cancelar" class="btn btn-danger" data-toggle="modal" data-target="#CambiarFotoPerfil">
                </div>
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->

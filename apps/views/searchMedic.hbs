                  <th><b>Ciudad padecimiento</b></th>
                  <th><b>Colonia padecimiento</b></th>
                </tr>
              </thead>
              <tbody id='tbmedReg'>
                <tr>
                  <th><i>{{especialidad}}</i></th>
                  <th><i>{{ciudad}}</i></th>
                  <th><i>{{colonia}}</i></th>

  <div class="container">
    <div class="row">
      <div class="upper">
        <ol class="breadcrumb">
          <li><a href="/">Intermed</a></li>
          <li class="active">Resultados</li>
        </ol>
        <h4>Registrate para poder consultar los perfiles de cada médico.</h4>
      </div>
      <section class="">
        <!-- empieza buscador -->
        <div class="panel">
          <div class="panel-body">
            <form method="POST" action="/searchMedic">
              <!-- Form principal -->
              <h4>Filtra tu busqueda o inicia una nueva</h4>
              <div class="parametros col-md-12">
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <select class="form-control" name="especialidad">
                        <option>Especialidades</option>
                        <option>...</option>
                        <option>...</option>
                        <option>...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <select class="form-control" name="ciudad">
                        <option>Ciudad</option>
                        <option>...</option>
                        <option>...</option>
                        <option>...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <select class="form-control" name="colonia">
                        <option>Colonia</option>
                        <option>...</option>
                        <option>...</option>
                        <option>...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <select class="form-control" name="padecimiento">
                        <option>Padecimiento</option>
                        <option>...</option>
                        <option>...</option>
                        <option>...</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <input type="text" class="form-control" id="nombreMed" name="nombreMedico" placeholder="Nombre del Medico">
                    </div>
                  </div>
                  <div class="col-md-5">
                    <ul class="list-inline">
                      <li>
                        <label>Añade a tu busqueda: </label>
                      </li>
                      <li>
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" name="hospital" value="hospital"> Hospital
                          </label>
                        </div>
                      </li>
                      <li>
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" name="aseguradora" value="aseguradora"> Aseguradora
                          </label>
                        </div>
                      </li>
                      <li>
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" name="costo" value="costo"> Costo
                          </label>
                        </div>
                      </li>
                    </ul>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <!-- <button class="btn btn-success btn-md btn-block"id = "btn">
                               <span class="glyphicon glyphicon-search"></span>&nbsp Buscar
                             </button> -->
                      <input type="submit" value="Buscar" class="btn btn-success btn-md btn-block" id="btn" />
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <!-- final del form principal -->
          </div>
        </div>
      </section>

    </div>
  </div>


            <table class="table">
              <caption></caption>
              <thead>
                <tr>
                  <th><b>Especialidad</b></th>
                  <th><b>Ciudad</b></th>
                  <th><b>Colonia</b></th>
                  <th><b>Padecimiento</b></th>

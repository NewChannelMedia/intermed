  <section id="buscador" class="container">
    <!-- empieza buscador -->
    <div id="panel-buscador" class="panel">
      <div class="panel-body" style="height:auto!important">
        <form action="/buscar" id="buscaMedico" method="POST" onsubmit="return iniciarBusqueda()">
          <div class="col-md-10">
            <div class="row" style="padding-bottom:0px!important">
              <div class="col-md-3">
                <div class="form-group">
                  <select class="form-control selectprimary" onchange="CargarExtraBusqueda()" id="tipoBusqueda" name="tipoBusqueda">
                    <option value="0">Médicos/Instituciones</option>
                    <option value="1">Médicos</option>
                    <option value="2">Instituciones</option>
                  </select>
                </div>
              </div>

              <div class="col-md-2">
                <div class="form-group" id="selectGroup">
                  <select class="form-control" id="selectEstado" name="selectEstado" onChange="cargarCiudades('#selectEstado');" aria-describedby="selectEstadoP">
                    <option value="0">Estado</option>
                    {{#each estado}}
                      <option value="{{id}}">{{estado}}</option>
                    {{/each}}
                  </select>
                  <span id = "selectIcon" class="" aria-hidden="true"></span>
                  <span class="sr-only" id="selectEstadoP">(success)</span>
                  <div id = "select-error"></div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <select class="form-control" id="selectCiudad" name="selectCiudad">
                    <option value="0">Municipio/Ciudad</option>
                    {{#each render.municipios}}
                      <option value="{{id}}">{{municipio}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group" id="nameGroup">
                  <input type="text" class="form-control" id="nombreMed" name="nombreMed" value="{{render.nombre}} {{render.apellido}}" aria-describedby="algo">
                  <span id = "nameIcon" class="" aria-hidden="true"></span>
                  <span id="algo" class="sr-only">(success)</span>
                  <div id = "nombre-error"></div>
                </div>
              </div>
              {{#if render.estado}}
                <script type="text/javascript">
                  $('#selectEstados').prop('value',{{render.estado}});
                  {{#if render.municipio}}
                    $('#selectCiudad').prop('value',{{render.municipio}});
                  {{/if}}
                </script>
              {{/if}}
              <div class="col-md-12">
                <div class="row"  id="extraSearch"  style="padding-bottom:0px!important">
                </div>
              </div>
          </div>
        </div>
          <div class="col-md-2">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                   <!--<button type="button" id="searchingData" class="btn btn-success btn-md btn-block"id = "btn">
                    <span class="glyphicon glyphicon-search"></span>&nbsp Buscar
                  </button>-->
                  <input type="submit" value="Buscar" class="btn btn-success btn-md btn-block" id="btn" />
                </div>
              </div>
            </div>
          </div>
        </form>
        <!-- final del form principal -->
      </div>
    </div>
    <!-- espacio para icono scroll -->
    <div class="row ">
